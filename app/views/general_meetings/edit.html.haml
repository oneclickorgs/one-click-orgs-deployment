%h2 Enter minutes
= form_for(@general_meeting) do |general_meeting_form|
  %h3 Minutes
  %p= general_meeting_form.text_area :minutes

  %h3 Members in attendance
  - @members.each do |member|
    %p.checkbox
      = check_box_tag "general_meeting[participant_ids][#{member.id}]"
      = label_tag "general_meeting_participant_ids_#{member.id}", member.name

  %p= general_meeting_form.submit "Save these minutes"