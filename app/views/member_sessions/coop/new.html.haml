.login_pane
  = form_tag(member_session_path, :class => 'login') do
    %h2
      = @page_title
    %p
      = label_tag(:email)
      = text_field_tag(:email)
    %p
      = label_tag(:password)
      = password_field_tag(:password)
    %p
      = submit_tag "Login", :id => 'submit'
    %p.helper
      = link_to 'Forgotten your password?', new_password_reset_path
.new_member_pane
  %h2 Apply for membership
  %p
    If you are interested in becoming a member of
    = co.name
    you can:
  %p
    = link_to "Apply for membership", new_member_path