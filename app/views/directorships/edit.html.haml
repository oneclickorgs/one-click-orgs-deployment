%h2
  Retiring
  = @directorship.director_name
.section
  = form_for(@directorship) do |directorship_form|
    %p
      = directorship_form.check_box(:certification)
      = directorship_form.label(:certification, "I certify that this director retired", :class => 'inline')
      on
      = directorship_form.date_select(:ended_on, {}, :class => 'inline')
    %p
      = directorship_form.submit("Record this retirement")